%h2 Local Top Up

= simple_form_for @trx, url: transactions_path do |f|
  .row.mt-5
    .col-12
      .card
        .row
          .col-2
          .col-8
            = f.label :operators
            = f.collection_radio_buttons :operator_id, @operators.local.map {|a| [a.id, a.operator_name ]}, :first, :last
      .card.mt-5
        .row
          .col-2
          .col-8
            = f.collection_radio_buttons :amount, @operator_rates.map {|a| [a.amount]}, :first, :last
      .card.mt-5
        .row
          .col-2
          .col-8
            = f.input :phone_number
      = f.submit
