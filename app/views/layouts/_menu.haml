#mySidenav.sidenav.bg-red.py-5
  %h3
    = link_to 'FoxPay', root_path, class: 'text-white d-inline-block'
    %a.d-inline-block{:href => "javascript:void(0)", :onclick => "closeNav()"}= icon('bars', class: 'text-white mb-1')
    = link_to 'Dashboard', root_path, class: 'text-white d-block mt-4'
    = link_to 'Local Top Up', local_top_up_transactions_path, class: 'text-white d-block mt-3'
    = link_to 'International Top Up', international_top_up_transactions_path, class: 'text-white d-block mt-3'
    = link_to 'PIN', new_pin_path, class: 'text-white d-block mt-4'
    = link_to 'Bill Payment', bill_payment_transactions_path, class: 'text-white  d-block mt-3'
    = link_to 'Transactions History', transactions_path, class: 'text-white d-block mt-3'
    = link_to 'E-Wallet',wallets_path, class: 'text-white d-block mt-3'
    = link_to 'My Account', account_transactions_path, class: 'text-white d-block mt-3'
    = link_to 'Agent Registration', agent_registration_transactions_path, class: 'text-white d-block mt-3'
    = link_to 'Help', help_transactions_path, class: 'text-white d-block mt-3'
    = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'text-white d-block mt-3'

:javascript
  function openNav() {
    document.getElementById("mySidenav").style.width = "300px";
    document.getElementById("main").style.marginLeft = "300px";
  }

  function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
      document.getElementById("main").style.marginLeft = "0";
  }
