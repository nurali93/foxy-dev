- provide :page_title, 'PIN Purchase'
= simple_form_for @pin, url: pins_path do |f|
  .row
    .col-12
      .card
        .card-block
          .card-title Operator
          .card-text
            = f.collection_radio_buttons :operator_id, @operators.map {|a| [a.id, a.operator_name ]}, :first, :last
  .row.mt-5
    .col-12
      .card
        .card-block
          .card-title Amount
          .card-text
            = f.input :amount
            %input{type: 'radio', name: 'test'} 5
            %input{type: 'radio', name: 'test'} 10
            %input{type: 'radio', name: 'test'} 15
            %input{type: 'radio', name: 'test'} 20
            %input{type: 'radio', name: 'test'} 30
            %input{type: 'radio', name: 'test'} 50
  .row.mt-5.justify-content-center
    .btn Buy PIN
    = f.submit